senha = "1234"
contador = 0

while True:
    senha_u = input("Digite sua senha: ")
    if senha_u == senha:
        print ("senha correta - acesso permitido")
        break
    if senha_u != senha and contador < 2:
        contador += 1
        print ("Senha incorreta, acesso negado")
        continue

    else:
     print ("Senha incorreta, nÃºmero de tentativas excedidas")
    break