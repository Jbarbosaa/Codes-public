
soma_pares = 0
while True:
    numero = int(input("Digite um numero par: "))
    if numero == 0:
        break
    if numero % 2 != 0:
        print ("Apenas pares")
        continue
    else:
        while soma_pares <= 100:
            soma_pares = numero + soma_pares
            print( f"A soma do número atual é: {soma_pares} ")
